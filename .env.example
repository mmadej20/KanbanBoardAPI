# .env.example — copy to .env and update before running containers
# Do NOT commit secrets. Add .env to .gitignore.

# SQL Server / Database
DB_HOST=db
DB_PORT=1433
DB_NAME=KanbanDb
DB_USER=sa
# Use a strong password for local dev; change before deploying to production.
DB_PASSWORD=ChangeMeToAStrongPassword123!

# Connection string consumed by the ASP.NET app (Configuration.GetConnectionString("Local"))
ConnectionStrings__Local=Server=${DB_HOST},${DB_PORT};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=true

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Dockerfile expects APP_UID when switching user in the image.
# Set a numeric UID if you want file permission alignment, e.g. 1000
APP_UID=1000